{
    "version": 6,
    "configurePresets": [
        {
            "name": "llvm",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++",
                "CMAKE_SHARED_LINKER_FLAGS": "-fuse-ld=ld"
            }
        },
        {
            "name": "llvm-debug",
            "hidden": true,
            "inherits": "llvm",
            "cacheVariables": {
                "CMAKE_C_FLAGS_DEBUG": "-g -ggdb3l",
                "CMAKE_CXX_FLAGS_DEBUG": "-g -ggdb3"
            }
        },
        {
            "name": "llvm-release",
            "hidden": true,
            "inherits": "llvm",
            "cacheVariables": {
                "CMAKE_C_FLAGS_RELEASE": "-O3",
                "CMAKE_CXX_FLAGS_RELEASE": "-O3"
            }
        },
        {
            "name": "llvm-win",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_C_COMPILER": "C:/Program Files/LLVM/bin/clang-cl.exe",
                "CMAKE_CXX_COMPILER": "C:/Program Files/LLVM/bin/clang-cl.exe"
            }
        },
        {
            "name": "llvm-win-debug",
            "hidden": true,
            "inherits": "llvm-win",
            "cacheVariables": {
                "CMAKE_C_FLAGS_DEBUG": "-g",
                "CMAKE_CXX_FLAGS_DEBUG": "-g"
            }
        },
        {
            "name": "llvm-win-release",
            "hidden": true,
            "inherits": "llvm-win",
            "cacheVariables": {
                "CMAKE_C_FLAGS_RELEASE": "-O3",
                "CMAKE_CXX_FLAGS_RELEASE": "-O3"
            }
        }
    ]
}
