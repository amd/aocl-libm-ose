{
    "version": 6,
    "configurePresets": [
        {
            "name": "gcc",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_C_COMPILER": "gcc",
                "CMAKE_CXX_COMPILER": "g++",
                "CMAKE_C_FLAGS": "-Wall -Wcast-align",
                "CMAKE_CXX_FLAGS": "-Wall -Wcast-align",
                "CMAKE_CXX_STANDARD_REQUIRED": "YES",
                "CMAKE_CXX_EXTENSIONS": "OFF"
            }
        },
        {
            "name": "gcc-debug",
            "hidden": true,
            "inherits": "gcc",
            "cacheVariables": {
                "CMAKE_C_FLAGS_DEBUG": "-g -ggdb3",
                "CMAKE_CXX_FLAGS_DEBUG": "-g -ggdb3"
            }
        },
        {
            "name": "gcc-release",
            "hidden": true,
            "inherits": "gcc"
        }
     ]
}
